<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="me.apomazkin.feature_vocabulary_impl.ui.addDefinition.AddDefinitionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/d32"
        android:orientation="vertical"
        android:padding="@dimen/d16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/dialog_add_definition_header"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{ () -> model.onNounSelect()}"
                android:text="@string/common_noun_label" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d16"
                android:checked="@={model.nounCountableChecked}"
                android:text="@string/option_countable"
                android:visibility="@{model.nounCountableVisibility}" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{ () -> model.onVerbSelect()}"
                android:text="@string/common_verb_label" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d16"
                android:checked="@={model.verbTransitiveChecked}"
                android:text="@string/option_transitive"
                android:visibility="@{model.verbTransitiveVisibility}" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{ () -> model.onAdjectiveSelect()}"
                android:text="@string/common_adjective_label" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{ () -> model.onAdverbSelect()}"
                android:text="@string/common_adverb_label" />


        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:autofillHints="ЧОЧО?"
            android:hint="@string/dialog_add_definition_et_hint"
            android:inputType="textAutoCorrect|textLongMessage"
            android:text="@={model.addingDefinition}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/d16"
            android:onClick="@{() -> model.onAddDefinition()}"
            android:text="@string/dialog_add_definition_btn_add" />

    </LinearLayout>
</layout>